{
	"extends": ["airbnb-base", "prettier"],
	"plugins": ["prettier", "import"],
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"prettier/prettier": ["error", { "singleQuote": true }],
		"no-unused-vars": ["error", { "args": "none" }],
		"no-underscore-dangle": ["error", { "allow": ["_id"] }]
	}
}
